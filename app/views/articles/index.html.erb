<%= link_to 'Add an article', new_article_path %>
<div class="wrapper">
  <h1>Wikinimous</h1>
</div>

<div class="container">
  <div class="row">
      <% @articles.each do |article| %>
        <div class="col-xs-12">
          <h2><%= link_to article.title, article_path(article[:id]) %></h2>
        </div>
        <div class="col-xs-12">
          <%= link_to 'Edit', edit_article_path(article[:id]) %>
          <%= link_to 'Delete Article', article_path(article[:id]), method: :delete, data: { confirm: "Are you sure?" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
